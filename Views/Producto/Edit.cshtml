@model Producto

@{
    ViewData["Title"] = "Editar Producto";
}
<div asp-validation-summary="All"></div>
<div class="text-center container">
    <h1 class="titulo">Editar Producto</h1>
    <form method="POST">
        <div class="form-group">
            <label asp-for="Id">Id del Producto</label>
            <input asp-for="Id" type="text" class="form-control" id="Id" placeholder="Id del Producto" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
            <label asp-for="nombreProducto">Nombre del Producto</label>
            <input asp-for="nombreProducto" type="text" class="form-control" id="nombreProducto" placeholder="Nombre del Producto" required>
            </div>
           <div class="form-group col-md-6">
            <label asp-for="descripcionProducto">Descripción del Producto</label>
            <input asp-for="descripcionProducto" type="text" class="form-control" id="descripcionProducto" placeholder="Descripción del Producto" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-9">
                <label asp-for="imagenProducto">URL de la imagen del Producto</label>
                <input asp-for="imagenProducto" type="text" class="form-control" id="imagenProducto" placeholder="URL imagen del Producto" required>
            </div>
            <div class="form-group col-sm-3">
                <div class="form-check">
                        <input asp-for="activo"class="form-check-input" type="checkbox" id="activo">
                        <label asp-for="activo" class="form-check-label">
                            ¿Activo?
                        </label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="observacionesProducto">Observaciones del Producto</label>
                <input asp-for="observacionesProducto" type="text" class="form-control" id="observacionesProducto" placeholder="Observaciones del producto" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
            </div>
            <div class="form-group col-md-6">
                <a asp-controller="Producto" asp-action="Index" ><button type="button" class="btn btn-success btn-lg">Volver</button></a>
            </div>
        </div>
</form>


    
    
</div>
